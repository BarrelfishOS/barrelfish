#include <offsets.h>

OUTPUT_FORMAT("elf32-littlearm")
OUTPUT_ARCH("arm")

ENTRY(start)

SECTIONS {
    . = KERNEL_LINK_BASE;
    
    kernel_first_byte = .;
    
    .text : { *(.text); }
    kernel_text_final_byte = .;

    . = ALIGN(4k);
    .rodata . :
    {
        *(.rodata);
    }

    .got . :
    {
        got_base = .;
        *(.got);
    }

    .bss . :
    {
        *(.bss);
    }

    kernel_final_byte = .;

    /***** These sections get discarded *****/
    /DISCARD/ :
    {
        /* Discard exception handler frames and headers -- we don't use em */
        *(.eh_frame);
        *(.eh_frame_hdr);
        *(.note.gnu.build-id);
        *(.interp);
/*           *(.dynsym); */
/*           *(.dynstr); */
/*           *(.hash); */
/*           *(.gnu.hash); */
        *(.dynamic); 
    }
}
