let commonCFiles = [ "boot_modules.c",
                    "device_caps.c",
                    "int_caps.c",
                    "driver_startup.c",
                    "main.c",
                    "queue.c",
                    "start_cpu.c",
                    "start_pci.c",
                    "start_int_ctrl.c",
                    "driver_domains.c"
                    ] in
[ build application { target = "kaluga",
                      cFiles = (commonCFiles) ++ [ "x86.c" ],
                      flounderDefs = [ "monitor" ],
                      flounderBindings = [ "octopus" ],
                      flounderExtraDefs = [ ("monitor_blocking",["rpcclient"]) ],
                      flounderTHCStubs = [ "octopus" ],
                      addLibraries = libDeps [ "skb", "octopus", "vfs",
                                               "spawndomain", "elf", "mm",
                                               "trace", "int_route_client",
                                               "driverkit" ],
                      architectures = [ "x86_64", "x86_32" ] },
  build application { target = "kaluga",
                      cFiles = commonCFiles,
                      flounderDefs = [ "monitor" ],
                      flounderBindings = [ "octopus" ],
                      flounderExtraDefs = [ ("monitor_blocking",["rpcclient"]) ],
                      flounderTHCStubs = [ "octopus" ],
                      addLibraries = libDeps [ "skb", "octopus", "vfs_noblockdev",
                                               "spawndomain", "elf", "mm",
                                               "trace", "driverkit",
                                               "int_route_client"],
                      architectures = [ "k1om" ] },
  build application { target = "kaluga",
                      cFiles = commonCFiles ++ [ "armv7.c", "armv7_startup.c" ],
                      flounderDefs = [ "monitor" ],
                      flounderBindings = [ "octopus" ],
                      flounderExtraDefs = [ ("monitor_blocking",["rpcclient"]) ],
                      flounderTHCStubs = [ "octopus" ],
                      addLibraries = libDeps [ "skb", "octopus", "vfs_ramfs",
                                               "spawndomain", "elf", "mm",
                                               "trace", "driverkit",
                                               "int_route_client"],
                      architectures = [ "armv7" ] },
  build application { target = "kaluga",
                      cFiles = commonCFiles ++ [ "armv8.c" ],
                      flounderDefs = [ "monitor" ],
                      flounderBindings = [ "octopus" ],
                      flounderExtraDefs = [ ("monitor_blocking",["rpcclient"]) ],
                      flounderTHCStubs = [ "octopus" ],
                      addLibraries = libDeps [ "skb", "octopus", "vfs_ramfs",
                                               "spawndomain", "elf", "mm",
                                               "trace", "int_route_client",
                                               "driverkit" ],
                      architectures = [ "armv8" ] }
]
