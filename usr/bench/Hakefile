[ build application { target = "bench", cFiles = [ "bench.c"], architectures = [ "x86_64" ]  },

  build application { target = "stsc_bench",
                      cFiles = ["stsc_bench.c"],
                      addLibraries = [ "rcce" ],
                      architectures = ["x86_64"]
                    },

  build application { target = "lrpc_bench",
                      cFiles = [ "lrpc_bench.c" ],
                      flounderBindings = [ "bench" ],
                      addLibraries = ["bench"] },

  build application { target = "tsc_bench",
                      cFiles = [ "tsc_bench.c" ],
                      addCFlags = [ "-DCACHE_BENCH" ],
                      flounderBindings = [ "hpet" ],
                      addLibraries = ["bench"]
                    }
]
