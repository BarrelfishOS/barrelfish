\newenvironment{code}{
	\begin{quote}\begin{alltt}\hrulefill}
	{\hrulefill\end{alltt}\end{quote}}


%
% \quickref[width]{caption}{text}
%
\definecolor{lightgrey}{gray}{.8}
\newcommand{\quickref}[3][15cm]{
	\begin{figure}
	\begin{center}
	\fcolorbox{black}{lightgrey}{
	\begin{minipage}{#1}
	#3
	\end{minipage}
	}
	\end{center}
	\caption{#2}
	\end{figure}}


%
% \quickrefstatic[width]{caption}{text}
%
\newcommand{\quickrefstatic}[3][15cm]{
	\begin{center}
	\fcolorbox{black}{lightgrey}{
	\begin{minipage}{#1}
	#3
	\end{minipage}
	}
	#2
	\end{center}}


%
% \exercises[width]{caption}{text}
%
\newcommand{\exercises}[3][15cm]{
	\begin{figure}
	\begin{center}
	\fbox{
	\begin{minipage}{#1}
	#3
	\end{minipage}
	}
	\end{center}
	\caption{#2}
	\end{figure}}


%
% \Note
%
\newcommand{\Note}[1]{
\begin{description}
\item[$\bigotimes$] #1
\end{description}
}


%
% \See
%
\newcommand{\See}[1]{
\begin{description}
\item[$\bigodot$] #1
\end{description}
}



%
% \Green highlighter
%
\newcommand{\HighGreen}[1]{
\textcolor[rgb]{0.5,1.0,0.5}{\rule[-0.1em]{4em}{1em}}\makebox[0pt][r]{#1}
}

%
% \Red highlighter
%
\newcommand{\HighRed}[1]{
\textcolor[rgb]{1.0,0.5,0.5}{\rule[-0.1em]{4em}{1em}}\makebox[0pt][r]{#1}
}
