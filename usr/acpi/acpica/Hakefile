let subdirs = [ "dispatcher",
                "events",
                "executer",
                "hardware",
                "namespace",
                "parser",
                "resources",
                "tables",
                "utilities" ]
in
  [ build library { target = "acpica",
  		    cFiles = concat [ find cInDir sd | sd <- subdirs ],
                    addCFlags =  [ "-Wno-redundant-decls", 
                                   "-fno-strict-aliasing" ],
                    addIncludes = [ "include" ],
                    architectures = [ "x86_64", "x86_32", "armv8" ]
                  }
  ]

