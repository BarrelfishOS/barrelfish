        "i386/muldi3.S",
        "i386/udivdi3.S",
        "i386/umoddi3.S" ] ]
    "x86_64" -> [ builtins_dir ++ x | x <- [
        "x86_64/chkstk.S",
        "x86_64/chkstk2.S",
        "x86_64/floatundidf.S",
        "x86_64/floatundisf.S",
        "x86_64/floatundixf.S" ] ]
    "k1om" -> builtins_asm_arch "x86_64"
    "armv5" -> [ builtins_dir ++ x | x <- [
